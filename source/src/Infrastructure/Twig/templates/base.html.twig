<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="x-csrf-token" content="{{ csrf_token('authenticate') }}">
        <meta name="auth" content="{{ is_granted('IS_AUTHENTICATED_FULLY') ? 1 : 0 }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Life insurance DDD{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/favicon.png') }}" sizes="32x32">
        {% block stylesheets %}
            {{ vite_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="app"></div>
        {% endblock %}

        {% block javascripts %}
            {{ vite_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
